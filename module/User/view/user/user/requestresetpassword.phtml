echo $this->form()->openTag($form);
?>
<div class="form-group">
    <?php echo $this->flashMessenger()->render('request-reset-password-error', ['alert', 'alert-dismissible', 'alert-danger']) ?>
    <?php echo $this->flashMessenger()->render('request-reset-password-success', ['alert', 'alert-dismissible', 'alert-success']) ?>
    <label for="email">Email address</label>
    <div class="input-group">
        <span class="input-group-addon">@</span>
        <?php
        $email = $form->get('email');
        $email->setAttribute('id', 'email');
        echo $this->formInput($email);
        ?>
   </div>
</div>
<?php
$submit = $form->get('submit');
