<h1><?php echo $this->translate('Reset Password'); ?></h1>

<div class="col-sm-12 col-md-12">
    <ul>
        <?php if (isset($this->errorMessages)) : ?>
            <?php foreach ($this->errorMessages as $element => $messages) : ?>
                <?php foreach ($messages as $message) : ?>
                    <li><?php echo $message ?></li>
                <?php endforeach ?>
            <?php endforeach ?>
        <?php endif ?>
    </ul>
</div>

<?php
$form = $this->form;
$form->prepare();
